class Arquero(Personaje):
    def __init__(self, nombre, fuerza, inteligencia, defensa, vida, precision):
        super().__init__(nombre, fuerza, inteligencia, defensa, vida)
        self.precision = precision

    def atributos(self):
        super().atributos()
        print("·Precisión:", self.precision)

    def daño(self, enemigo):
        # Cálculo de daño basado en fuerza y precisión
        return (self.fuerza + self.precision) // 2 - enemigo.defensa

class Clerigo(Personaje):
    def __init__(self, nombre, fuerza, inteligencia, defensa, vida, mana):
        super().__init__(nombre, fuerza, inteligencia, defensa, vida)
        self.mana = mana

    def atributos(self):
        super().atributos()
        print("·Mana:", self.mana)

    def curar(self, objetivo):
        # Cálculo de curación basado en inteligencia y mana
        curacion = self.inteligencia + self.mana // 2
        objetivo.vida += curacion
        print(self.nombre, "ha curado", curacion, "puntos de vida a", objetivo.nombre)

# Crear instancias de los nuevos personajes
arquero = Arquero("Legolas", 15, 10, 5, 80, 15)
clerigo = Clerigo("Gandalf", 10, 20, 5, 80, 100)

# Combate
combate(arquero, clerigo)
